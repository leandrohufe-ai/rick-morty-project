{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["esnext", "dom"],
    "strict": true,
    "noEmit": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@rick-morty/types": ["../types/src/index.ts"],
      "@rick-morty/utils": ["../utils/src/index.ts"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "dist"]
}
